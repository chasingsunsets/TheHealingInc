<div class="container">
	{{#if products}}
	<div class="card card-body">
		<h3 class="text-primary">Products</h3>
		{{#each products}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">{{name}}</h5>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-lg-2">
						<a href="{{posterURL}}" data-title="{{title}}" data-toggle="lightbox">
							<img src="{{posterURL}}" alt="Poster" class="img-thumbnail img-fluid mb-2"
								onerror="this.src='/img/no-image.jpg'" style="max-height:160px">
						</a>
					</div>
					<div class="col-lg-10">
						<div class="row">
							<div class="col-sm-12 col-md-12 col-lg-3">
								<p class="font-italic">Stock</p>
								<p class="text-info">
									{{stock}}
								</p>
							</div>
							<div class="col-sm-12 col-md-12 col-lg-3">
								<p class="font-italic">Size</p>
								<p class="text-info">
									{{size}}
								</p>
							</div>
							<div class="col-sm-12 col-md-12 col-lg-3">
								<p class="font-italic">Price</p>
								<p class="text-info">
									${{price}}
								</p>
							</div>
							<div class="col-sm-12 col-md-12 col-lg-3">
								<p class="font-italic">Category</p>
								<p class="text-info">
									{{replaceCommas category}}
								</p>
							</div>
							<div class="row">
								<div class="col-sm-12 col-md-12 col-lg-8">
									<p>
										<a href="/product/editProduct/{{id}}" class="card-link mb-2">
											<i class="fas fa-pencil-alt"></i>
											Edit
										</a>
									</p>
								</div>
								<div class="col-sm-12 col-md-12 col-lg-12">
									<p>
										<a href="/product/deleteProduct/{{id}}" class="card-link" data-toggle="confirmation" data-title="Confirm delete?">
											<i class="far fa-trash-alt"></i>
											Delete
										</a>
									</p>
								</div>
							</div>
						</div>

					</div>						
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	{{else}}
	<h3>No products created</h3>
	{{/if}}
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>