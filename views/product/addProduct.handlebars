<div class="container">
	<div class="card card-body">
		<h3>Add Product</h3>
		<form action="" method="post">
			<div class="form-group">
				<label class="font-italic" for="name">Name</label>
				<input class="form-control" id="name" name="name" onblur="initialiseName()" required />
			</div>

			<div class = form-group>
				<label class="font-italic" for="image">Product image</label>
				<p><input type="file"  accept="image/*" name="image" id="file"  onchange="loadFile(event)" style="display: none;" required></p>
				<p><label for="file" style="cursor: pointer;">Upload Image</label></p>
				<p><img id="output" width="200" /></p>			
			</div>

			<div class="form-group">
				<label class="font-italic" for="stock">Stock</label>
				<input class="form-control" type="number" id="stock" name="stock" required/>
			</div>

			<div class="form-group">
				<label for="size">Pack Size</label>
				<select id="size" name="size" required>
				<option value="25">25</option>
				<option value="50">50</option>
				<option value="75">75</option>
				<option value="100">100</option>
				</select>
			</div>

			<div class="form-group">
				<label class="font-italic" for="price">Price</label>
				<input class="form-control" type="text" id="price" name="price" required/>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Category</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="" name="category" id="heart"
								value="heart">
							<label class="form-check-label" for="heart">Heart</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="brain"
								value="brain">
							<label class="form-check-label" for="brain">Brain</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="gut" value="gut">
							<label class="form-check-label" for="gut">Gut</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="eyes" value="eyes">
							<label class="form-check-label" for="eyes">Eyes</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="immunity" value="immunity">
							<label class="form-check-label" for="immunity">Immunity</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="joints" value="joints">
							<label class="form-check-label" for="joints">Joints</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="skin" value="skin">
							<label class="form-check-label" for="skin">Skin</label>
						</div>
					</div>
				</div>

			</div>
			<br>
			<button id="btnSubmit" type="submit" class="btn btn-primary">Add
			</button>
		</form>
	</div>
</div>

<script>
	var loadFile = function(event) {
		var image = document.getElementById('output');
		image.src = URL.createObjectURL(event.target.files[0]);
	};
</script>