<div class="container">
	<div class="card card-body">
		<h3>Add Product</h3>
		<form action="" method="post">
			<div class="row mb-3">
				<div class="col-lg-9">
					<div class="form-group">
						<label class="font-italic" for="name">Name</label>
						<input class="form-control mb-1" id="name" name="name" onblur="initialiseName()" />
					</div>
					<div class="form-group">
                        <label class="font-italic" for="stock">Stock</label>
                        <input class="form-control" type="number" id="stock" name="stock" required/>
					</div>
					<div class="form-group">
						<label class="font-italic">Pack Size</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="50" value="50" name="size">
							<label class="form-check-label" for="50">50g</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="100" value="100" name="size">
							<label class="form-check-label" for="100">100g</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="200" value="200" name="size">
							<label class="form-check-label" for="200">200g</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="300" value="300" name="size">
							<label class="form-check-label" for="300">300g</label>
						</div>
					</div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-6" style="padding-left: 0px; padding-right: 0px; padding-bottom: 10px">
						<label class="font-italic" for="price">Price</label>
						<input class="form-control" type="text" id="price" name="price" required/>
					</div>
					<div class="col-12 col-sm-12 col-md-6 col-lg-6" style="padding-left: 0px; padding-right: 0px;">
						<label class="font-italic">Category</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="heart"
								value="heart">
							<label class="form-check-label" for="heart">Heart</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="brain"
								value="brain">
							<label class="form-check-label" for="brain">Brain</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="gut" value="gut">
							<label class="form-check-label" for="gut">Gut</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="eyes" value="eyes">
							<label class="form-check-label" for="eyes">Eyes</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="immunity" value="immunity">
							<label class="form-check-label" for="immunity">Immunity</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="joints" value="joints">
							<label class="form-check-label" for="joints">Joints</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="category" id="skin" value="skin">
							<label class="form-check-label" for="skin">Skin</label>
						</div>
					</div>
				</div>
				<div class="col-lg-3">
					<div class="custom-file mb-2">
						<input type="file" class="custom-file-input" id="posterUpload" name="posterUpload"
							accept="image/png,image/jpeg,image/jpg,image/gif">
						<label class="custom-file-label" for="customFile">Choose File</label>
					</div>
					<div class="text-danger small mb-2" id="posterErr" style="display:none"></div>
					<img id="poster" src="/img/no-image.jpg" alt="Poster" class="border img-thumbnail img-fluid">
					{{!â€”- Hidden field to submit URL of poster to the server --}}
					<input id="posterURL" type="hidden" name="posterURL">
				</div>
			</div>
			<br>
			<button id="btnSubmit" type="submit" class="btn btn-primary">Add
			</button>
		</form>
	</div>
</div>
