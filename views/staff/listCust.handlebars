{{!-- <div class="container besidenav" style="padding-left:70px; width:max-content;"> --}}

    <body>
        <div>{{!-- <div style="background-color: #F1EDE5;"> --}}
            {{#if users}}
            <h4 class="container">Customer List</h4>
            <table class="container staffbg">
                <tr>
                    <th>&nbsp;ID</th>
                    <th>&nbsp;Name</th>
                    <th>&nbsp;Username</th>
                    <th>&nbsp;Email</th>
                    <th>&nbsp;Address</th>
                    <th>&nbsp;Action</th>
                </tr>
            </table>
            {{#each users}}

            <table class="container">
                <tr>
                    <td>&nbsp;{{id}}</td>
                    <td>&nbsp;{{firstname}}&nbsp;{{lastname}}</td>
                    <td>&nbsp;{{username}}</td>
                    <td>&nbsp;{{email}}</td>
                    <td>&nbsp;{{address}}</td>
                    <td>
                        <div>
                            <a href="/staff/editCust/{{id}}" class="card-link mb-2" style="color: #8BAD97">
                                <i class="fas fa-pencil-alt"></i>
                                Edit
                            </a>
                        </div>
                        <div>
                            <a href="/staff/deleteaccount/{{id}}" class="card-link" style="color: darkred" data-toggle="confirmation"
                                data-title="Confirm delete?">
                                <i class="far fa-trash-alt"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>

            </table>
            {{/each}}
        </div>

        {{else}}
        <h3>No Customer</h3>
        {{/if}}
    </body>
    <script>
        $('[data-toggle=confirmation]').confirmation({
            rootSelector: '[data-toggle=confirmation]',
        });
    </script>