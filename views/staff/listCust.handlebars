<body>
    <div>{{!-- <div style="background-color: #F1EDE5;"> --}}
            {{#if users}}
            <div class="container-fluid">

                <!-- Page Heading -->
                {{!-- <h1 class="h3 mb-2 text-gray-800">Tables</h1>
                <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
                    For more information about DataTables, please visit the <a target="_blank"
                        href="https://datatables.net">official DataTables documentation</a>.</p> --}}

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3" style="background-color:#8BAD97;">
                        <h5 class="m-0 font-weight-bold" style="color:white;">Customer List</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead style="background-color: #F1EDE5;">

                                    <tr>
                                        <th>&nbsp;ID</th>
                                        <th>&nbsp;Name</th>
                                        <th>&nbsp;Username</th>
                                        <th>&nbsp;Email</th>
                                        <th>&nbsp;Address</th>
                                        <th>&nbsp;Action</th>
                                    </tr>
                                </thead>
                                {{#each users}}

                                <tr>
                                    <td>&nbsp;{{id}}</td>
                                    <td>&nbsp;{{firstname}}&nbsp;{{lastname}}</td>
                                    <td>&nbsp;{{username}}</td>
                                    <td>&nbsp;{{email}}</td>
                                    <td>&nbsp;{{address}}</td>
                                    <td>
                                        <div>
                                            <a href="/staff/editCust/{{id}}" class="card-link mb-2"
                                                style="color: #8BAD97">
                                                <i class="fas fa-pencil-alt"></i>
                                                Edit
                                            </a>
                                        </div>
                                        <div>
                                            {{!-- <a href="/staff/deleteaccount/{{id}}" class="card-link"
                                                style="color: darkred" data-toggle="confirmation"
                                                data-title="Confirm delete?">
                                                <i class="far fa-trash-alt"></i> --}}

                                                <href="/staff/listCust" data-toggle="modal" data-target="#deletecust" class="card-link" style="color: darkred">
                                <i class="far fa-trash-alt"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>


                                {{/each}}
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        {{else}}
        <h3 class="m-0 font-weight-bold" style="padding-left:20px ;">No Customer</h6>
    </div>
    {{/if}}
</body>

<script>
    $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]',
    });
</script>

 <!-- Logout Modal-->
    <div class="modal fade" id="deletecust" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Customer Account</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Delete" below if you are deleting this customer account.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/staff/deleteaccount/{{id}}">Delete</a>
                </div>
            </div>
        </div>
    </div>